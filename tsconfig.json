{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "declarationDir": "./dist/@types",
    "declaration": true,
    "rootDirs": [
      "src"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.css",
    "src"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
